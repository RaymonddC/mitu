# ==============================================
# MNEE Autonomous Payroll - Environment Template
# ==============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# -----------------------------
# Database Configuration
# -----------------------------
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/mnee_payroll?schema=public"

# -----------------------------
# MNEE Network Configuration
# -----------------------------
# Testnet RPC endpoint
MNEE_RPC_URL="https://testnet.mnee-rpc.io"
MNEE_CHAIN_ID="mnee-testnet-1"

# Alternative mainnet (for production)
# MNEE_RPC_URL="https://mainnet.mnee-rpc.io"
# MNEE_CHAIN_ID="mnee-mainnet-1"

# -----------------------------
# Wallet Private Keys
# -----------------------------
# WARNING: NEVER use mainnet keys in development!
# Get testnet keys from MNEE testnet faucet

# Employer wallet (for testing - fund via faucet)
EMPLOYER_PRIVATE_KEY="your_employer_testnet_private_key_here"

# Agent wallet (used by autonomous agent)
AGENT_PRIVATE_KEY="your_agent_testnet_private_key_here"

# -----------------------------
# Deployed Contract Addresses
# -----------------------------
# Set after deploying contracts
SALARY_CONTRACT_ADDRESS=""

# -----------------------------
# Backend Configuration
# -----------------------------
PORT=3001
NODE_ENV="development"
JWT_SECRET="change-this-to-a-secure-random-string-in-production"

# Session secret for authentication
SESSION_SECRET="another-secure-random-string"

# -----------------------------
# Frontend Configuration
# -----------------------------
NEXT_PUBLIC_API_URL="http://localhost:3001"
NEXT_PUBLIC_MNEE_RPC_URL="https://testnet.mnee-rpc.io"
NEXT_PUBLIC_MNEE_CHAIN_ID="mnee-testnet-1"

# -----------------------------
# Agent Configuration
# -----------------------------
# How often to check for payroll (cron format)
AGENT_SCHEDULE="0 0 * * *"  # Daily at midnight UTC

# Enable/disable agent
AGENT_ENABLED="true"

# Retry configuration
AGENT_MAX_RETRIES="3"
AGENT_RETRY_DELAY_MS="5000"

# -----------------------------
# Optional: Monitoring & Alerts
# -----------------------------
# SENTRY_DSN=""
# SLACK_WEBHOOK_URL=""

# -----------------------------
# Optional: MNEE Faucet (for testing)
# -----------------------------
# MNEE_FAUCET_URL="https://faucet.testnet.mnee.io"
